{
  "name": "@xache/langchain",
  "version": "0.3.0",
  "description": "LangChain.js integration for Xache Protocol - verifiable AI agent memory",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "langchain",
    "xache",
    "ai",
    "agents",
    "memory",
    "blockchain",
    "receipts",
    "reputation",
    "erc8004",
    "x402"
  ],
  "author": "Xache Protocol",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xacheai/xache-protocol"
  },
  "homepage": "https://xache.xyz",
  "peerDependencies": {
    "@langchain/core": ">=0.3.80",
    "langchain": ">=0.3.37"
  },
  "dependencies": {
    "@xache/sdk": "workspace:*",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@langchain/core": "^0.3.80",
    "@types/node": "^20.10.0",
    "langchain": "^0.3.37",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
