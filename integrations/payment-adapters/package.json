{
  "name": "@xache/payment-adapters",
  "version": "5.0.0",
  "description": "Payment adapters for CDP x402 protocol integration",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "xache",
    "x402",
    "payments",
    "cdp",
    "micropayments"
  ],
  "author": "Xache Protocol Team",
  "license": "MIT",
  "dependencies": {
    "@coinbase/cdp-sdk": "^1.38.6",
    "@coinbase/x402": "^0.7.0",
    "@xache/constants": "workspace:*",
    "@xache/crypto": "workspace:*",
    "@xache/types": "workspace:*",
    "@xache/utils": "workspace:*",
    "jose": "^5.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
